import java.util.*;

public class HumanPlayer 
{
	
		public int quitCommand()
		{
			Scanner scan = new Scanner(System.in);
			
			char letterEntered = scan.next().charAt(0);
			
			while (letterEntered != 'q'|| letterEntered != 'Q')
			{
				return 1;
			}
			
			System.exit(0);	
		}
		
		public void syntaxCheck()
