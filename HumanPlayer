			if(subString = in.useDelimiter("[1-24]-[1-6]") )
			{
				//make move function
			}
			
			else if(subString == "\n")
			{
				return;
			}
			
			else
			{
				System.out.println("ERROR: Invalid move entry, please re-enter your moves");
				//back to re-enter moves function
			}
		}
}
